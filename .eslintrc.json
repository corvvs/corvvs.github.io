{
  "env": {
    "browser" : true,
    "node" : true,
    "es2022" : true
  },

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "next/core-web-vitals"
  ],

  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  },

  "plugins": [
    "@typescript-eslint",
    "react"
  ]
}
