{
  "env": {
    "browser" : true,
    "node" : true,
    "es2022" : true
  },

  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "project": "./tsconfig.json",
    "ecmaFeatures": {
      "jsx": true
    }
  },

  "rules": {
    "react/jsx-uses-vars": "error",
    "react/jsx-uses-react": "error"
  },
  "extends": ["eslint:recommended", "next/core-web-vitals"],

  "plugins": [
    "@typescript-eslint",
    "react"
  ]
}
